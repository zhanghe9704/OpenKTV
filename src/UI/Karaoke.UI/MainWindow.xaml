<Window
    x:Class="Karaoke.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid PreviewKeyDown="OnWindowKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Spacing="12" Margin="16,16,16,0">
            <TextBlock
                Text="Karaoke shell"
                FontSize="24"
                HorizontalAlignment="Center" />

            <!-- Volume Control -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Volume:" VerticalAlignment="Center" Margin="0,0,8,0" />
                <Slider x:Name="VolumeSlider"
                        Grid.Column="1"
                        Minimum="0"
                        Maximum="100"
                        Value="100"
                        TickFrequency="10"
                        TickPlacement="BottomRight"
                        ValueChanged="OnVolumeChanged" />
                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           MinWidth="40">
                    <Run Text="{x:Bind VolumeSlider.Value, Mode=OneWay}" />
                    <Run Text="%" />
                </TextBlock>
            </Grid>

            <CommandBar DefaultLabelPosition="Right" IsOpen="False">
                <AppBarButton Icon="Setting" Label="Settings (s)" Click="OnSettingsClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Play" Label="Play (p)" Click="OnPlayClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="P" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Icon="Pause" Label="Pause (SPACE)" Click="OnPauseClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Space" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Icon="Stop" Label="Stop (ESP)" Click="OnStopClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Escape" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Icon="Next" Label="Next (n)" Click="OnNextClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Icon="RepeatOne" Label="Repeat (n)" Click="OnRepeatClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="R" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Icon="Volume" Label="Vocal (v)" Click="OnVocalClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="FullScreen" Label="Full Screen (f)" Click="OnFullScreenClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="F" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Up" Label="Up (up)" Click="OnMoveUpClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Up" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Label="Down (dn)" Click="OnMoveDownClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Down" />
                    </AppBarButton.KeyboardAccelerators>
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Up">
                            <SymbolIcon.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="-1" />
                                    <TranslateTransform Y="20" />
                                </TransformGroup>
                            </SymbolIcon.RenderTransform>
                        </SymbolIcon>
                    </AppBarButton.Icon>
                </AppBarButton>
              <AppBarButton Label="Top (lf)" Click="OnMoveTopClicked">
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="Left" />
                </AppBarButton.KeyboardAccelerators>
                <AppBarButton.Icon>
                  <SymbolIcon Symbol="Previous">
                    <SymbolIcon.RenderTransform>
                      <TransformGroup>
                        <RotateTransform Angle="90" />
                        <TranslateTransform X="15" />
                      </TransformGroup>
                    </SymbolIcon.RenderTransform>
                  </SymbolIcon>
                </AppBarButton.Icon>
              </AppBarButton>
                <AppBarButton Label="Bottom (rt)" Click="OnMoveBottomClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Right" />
                    </AppBarButton.KeyboardAccelerators>
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Next">
                            <SymbolIcon.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="90" />
                                    <TranslateTransform X="15" />
                                </TransformGroup>
                            </SymbolIcon.RenderTransform>
                        </SymbolIcon>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Delete" Label="Delete (Ctrl+D)" Click="OnDeleteClicked">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="D" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
            </CommandBar>
            <ProgressRing
                HorizontalAlignment="Right"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.LoadingVisibility, Mode=OneWay}"
                Width="32"
                Height="32" />
        </StackPanel>
        <Grid Grid.Row="1" ColumnSpacing="16" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Artists" FontWeight="SemiBold" />
                <Grid Grid.Row="1" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Text="{x:Bind ViewModel.ArtistSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Search artists" />
                    <Button Grid.Column="1" Command="{x:Bind ViewModel.SearchArtistsCommand}" Padding="12,0">
                        <SymbolIcon Symbol="Find" />
                    </Button>
                </Grid>
                <ListView
                    Grid.Row="2"
                    ItemsSource="{x:Bind ViewModel.Artists, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedArtist, Mode=TwoWay}"
                    SelectionMode="Single" />
                <Grid Grid.Row="3" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Command="{x:Bind ViewModel.ArtistsPreviousPageCommand}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox
                        Grid.Column="1"
                        Width="40"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.ArtistsTotalPages, Mode=OneWay}"
                        Value="{x:Bind ViewModel.ArtistsPageNumber, Mode=TwoWay}"
                        SpinButtonPlacementMode="Hidden" />
                    <Button Grid.Column="2" Command="{x:Bind ViewModel.ArtistsNextPageCommand}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock
                        Grid.Column="3"
                        Text="{x:Bind ViewModel.ArtistsPageSummary, Mode=OneWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Grid>
            <Grid Grid.Column="1" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Songs" FontWeight="SemiBold" />
                <Grid Grid.Row="1" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Text="{x:Bind ViewModel.SongSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Search songs" />
                    <Button Grid.Column="1" Command="{x:Bind ViewModel.SearchSongsCommand}" Padding="12,0">
                        <SymbolIcon Symbol="Find" />
                    </Button>
                </Grid>
                <ListView
                    Grid.Row="2"
                    IsItemClickEnabled="True"
                    ItemClick="OnSongItemClick"
                    ItemsSource="{x:Bind ViewModel.FilteredSongs, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedSong, Mode=TwoWay}"
                    SelectionMode="Single"
                    RightTapped="OnSongRightTapped">
                    <ListView.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="View Details" Click="OnViewSongDetails">
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Document" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </ListView.ContextFlyout>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4" Padding="8">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{Binding Artist}" Width="80" />
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Width="180" />
                                    <TextBlock Text="{Binding Language}" Width="40" />
                                    <TextBlock Text="{Binding Genre}" Width="60" />
                                    <TextBlock Text="{Binding Comment}" Width="180" />
                                    <StackPanel Orientation="Horizontal" Spacing="4" Width="100">
                                        <TextBlock Text="Ch:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock Text="{Binding Instrumental}" />
                                        <TextBlock Text="Pri:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="8,0,0,0" />
                                        <TextBlock Text="{Binding Priority}" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding MediaPath}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Row="3" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Command="{x:Bind ViewModel.SongsPreviousPageCommand}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox
                        Grid.Column="1"
                        Width="40"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.SongsTotalPages, Mode=OneWay}"
                        Value="{x:Bind ViewModel.SongsPageNumber, Mode=TwoWay}"
                        SpinButtonPlacementMode="Hidden" />
                    <Button Grid.Column="2" Command="{x:Bind ViewModel.SongsNextPageCommand}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock
                        Grid.Column="3"
                        Text="{x:Bind ViewModel.SongsPageSummary, Mode=OneWay}"
                        VerticalAlignment="Center" />
                    <Button Grid.Column="4" Content="Add to Queue" Command="{x:Bind ViewModel.AddToQueueCommand}" />
                </Grid>
            </Grid>
            <Grid Grid.Column="2" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Queue" FontWeight="SemiBold" />
                <ListView
                    x:Name="QueueListView"
                    Grid.Row="1"
                    ItemsSource="{x:Bind ViewModel.Queue, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedQueuedSong, Mode=TwoWay}"
                    SelectedIndex="{x:Bind ViewModel.SelectedQueuedSongIndex, Mode=TwoWay}"
                    SelectionMode="Single"
                    RightTapped="OnQueueRightTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4" Padding="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock 
                                        Text="♪" 
                                        FontSize="16" 
                                        Foreground="Gold" 
                                        FontWeight="Bold"
                                        VerticalAlignment="Center"
                                        x:Name="PlayingIndicator"
                                        Visibility="Collapsed" />
                                    <TextBlock 
                                        Text="{Binding Title}" 
                                        FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock 
                                    Text="{Binding Artist}" 
                                    FontSize="12" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Row="2" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Command="{x:Bind ViewModel.QueuePreviousPageCommand}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox
                        Grid.Column="1"
                        Width="40"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.QueueTotalPages, Mode=OneWay}"
                        Value="{x:Bind ViewModel.QueuePageNumber, Mode=TwoWay}"
                        SpinButtonPlacementMode="Hidden" />
                    <Button Grid.Column="2" Command="{x:Bind ViewModel.QueueNextPageCommand}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock
                        Grid.Column="3"
                        Text="{x:Bind ViewModel.QueuePageSummary, Mode=OneWay}"
                        VerticalAlignment="Center" />
                    <Button Grid.Column="4" Content="Remove" Command="{x:Bind ViewModel.RemoveFromQueueCommand}" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
