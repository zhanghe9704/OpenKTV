<Window
    x:Class="Karaoke.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Spacing="12" Margin="16,16,16,0">
            <TextBlock
                Text="Karaoke shell"
                FontSize="24"
                HorizontalAlignment="Center" />
            <CommandBar DefaultLabelPosition="Right" IsOpen="False">
                <AppBarButton Icon="Refresh" Label="Rescan" Click="OnRescanClicked" />
                <AppBarButton Icon="Setting" Label="Settings" Click="OnSettingsClicked" />
            </CommandBar>
            <ProgressRing
                HorizontalAlignment="Right"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.LoadingVisibility, Mode=OneWay}"
                Width="32"
                Height="32" />
        </StackPanel>
        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Songs, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Spacing="4" Padding="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="{Binding Artist}" Width="200" />
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Priority}" Width="60" HorizontalAlignment="Right" />
                        </StackPanel>
                        <TextBlock Text="{Binding MediaPath}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
