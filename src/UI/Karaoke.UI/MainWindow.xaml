<Window
    x:Class="Karaoke.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Spacing="12" Margin="16,16,16,0">
            <TextBlock
                Text="Karaoke shell"
                FontSize="24"
                HorizontalAlignment="Center" />
            <CommandBar DefaultLabelPosition="Right" IsOpen="False">
                <AppBarButton Icon="Refresh" Label="Rescan" Click="OnRescanClicked" />
                <AppBarButton Icon="Setting" Label="Settings" Click="OnSettingsClicked" />
            </CommandBar>
            <ProgressRing
                HorizontalAlignment="Right"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.LoadingVisibility, Mode=OneWay}"
                Width="32"
                Height="32" />
        </StackPanel>
        <Grid Grid.Row="1" ColumnSpacing="16" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="Artists" FontWeight="SemiBold" />
                <ListView
                    ItemsSource="{x:Bind ViewModel.Artists, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedArtist, Mode=TwoWay}"
                    SelectionMode="Single"
                    MinHeight="300" />
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Command="{x:Bind ViewModel.ArtistsPreviousPageCommand}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox
                        Width="80"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.ArtistsTotalPages, Mode=OneWay}"
                        Value="{x:Bind ViewModel.ArtistsPageNumber, Mode=TwoWay}"
                        SpinButtonPlacementMode="Hidden" />
                    <Button Command="{x:Bind ViewModel.ArtistsNextPageCommand}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock Text="{x:Bind ViewModel.ArtistsPageSummary, Mode=OneWay}" Margin="8,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Spacing="8">
                <TextBlock Text="Songs" FontWeight="SemiBold" />
                <ListView
                    ItemsSource="{x:Bind ViewModel.FilteredSongs, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedSong, Mode=TwoWay}"
                    SelectionMode="Single"
                    MinHeight="300">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4" Padding="8">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{Binding Artist}" Width="200" />
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Priority}" Width="60" HorizontalAlignment="Right" />
                                </StackPanel>
                                <TextBlock Text="{Binding MediaPath}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Command="{x:Bind ViewModel.SongsPreviousPageCommand}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox
                        Width="80"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.SongsTotalPages, Mode=OneWay}"
                        Value="{x:Bind ViewModel.SongsPageNumber, Mode=TwoWay}"
                        SpinButtonPlacementMode="Hidden" />
                    <Button Command="{x:Bind ViewModel.SongsNextPageCommand}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock Text="{x:Bind ViewModel.SongsPageSummary, Mode=OneWay}" Margin="8,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                    <Button Content="Add to Queue" Command="{x:Bind ViewModel.AddToQueueCommand}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" Spacing="8">
                <TextBlock Text="Queue" FontWeight="SemiBold" />
                <ListView
                    ItemsSource="{x:Bind ViewModel.Queue, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedQueuedSong, Mode=TwoWay}"
                    SelectionMode="Single"
                    MinHeight="300">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4" Padding="8">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{Binding Artist}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Command="{x:Bind ViewModel.QueuePreviousPageCommand}">
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox
                        Width="80"
                        Minimum="1"
                        Maximum="{x:Bind ViewModel.QueueTotalPages, Mode=OneWay}"
                        Value="{x:Bind ViewModel.QueuePageNumber, Mode=TwoWay}"
                        SpinButtonPlacementMode="Hidden" />
                    <Button Command="{x:Bind ViewModel.QueueNextPageCommand}">
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock Text="{x:Bind ViewModel.QueuePageSummary, Mode=OneWay}" Margin="8,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                    <Button Content="Remove" Command="{x:Bind ViewModel.RemoveFromQueueCommand}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>