<Window x:ConnectionId='1'
    x:Class="Karaoke.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2'                                 >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Spacing="12" Margin="16,16,16,0">
            <TextBlock
                Text="Karaoke shell"
                FontSize="24"
                HorizontalAlignment="Center" />
            <CommandBar DefaultLabelPosition="Right" IsOpen="False">
                <AppBarButton x:ConnectionId='29' Icon="Setting" Label="Settings (s)"                          >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='30' Icon="Play" Label="Play (p)"                      >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="P" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton x:ConnectionId='31' Icon="Pause" Label="Pause (SPACE)"                       >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Space" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton x:ConnectionId='32' Icon="Stop" Label="Stop (ESP)"                      >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Escape" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton x:ConnectionId='33' Icon="Next" Label="Next (n)"                      >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton x:ConnectionId='34' Icon="RepeatOne" Label="Repeat (n)"                        >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="R" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton x:ConnectionId='35' Icon="Volume" Label="Vocal (v)"                       >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='36' Icon="FullScreen" Label="Full Screen (f)"                            >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="F" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='37' Icon="Up" Label="Up (up)"                        >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Up" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton x:ConnectionId='38' Label="Down (dn)"                          >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Down" />
                    </AppBarButton.KeyboardAccelerators>
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Up">
                            <SymbolIcon.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="-1" />
                                    <TranslateTransform Y="20" />
                                </TransformGroup>
                            </SymbolIcon.RenderTransform>
                        </SymbolIcon>
                    </AppBarButton.Icon>
                </AppBarButton>
              <AppBarButton x:ConnectionId='39' Label="Top (lf)"                         >
                <AppBarButton.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="Left" />
                </AppBarButton.KeyboardAccelerators>
                <AppBarButton.Icon>
                  <SymbolIcon Symbol="Previous">
                    <SymbolIcon.RenderTransform>
                      <TransformGroup>
                        <RotateTransform Angle="90" />
                        <TranslateTransform X="15" />
                      </TransformGroup>
                    </SymbolIcon.RenderTransform>
                  </SymbolIcon>
                </AppBarButton.Icon>
              </AppBarButton>
                <AppBarButton x:ConnectionId='40' Label="Bottom (rt)"                            >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Right" />
                    </AppBarButton.KeyboardAccelerators>
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Next">
                            <SymbolIcon.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="90" />
                                    <TranslateTransform X="15" />
                                </TransformGroup>
                            </SymbolIcon.RenderTransform>
                        </SymbolIcon>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='41' Icon="Delete" Label="Delete (Ctrl+D)"                        >
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="D" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
            </CommandBar>
            <ProgressRing x:ConnectionId='28'
                HorizontalAlignment="Right"
                                                                    
                                                                              
                Width="32"
                Height="32" />
        </StackPanel>
        <Grid Grid.Row="1" ColumnSpacing="16" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Artists" FontWeight="SemiBold" />
                <Grid Grid.Row="1" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='26'
                        Grid.Column="0"
                                                                                                                    
                        PlaceholderText="Search artists" />
                    <Button x:ConnectionId='27' Grid.Column="1"                                                   Padding="12,0">
                        <SymbolIcon Symbol="Find" />
                    </Button>
                </Grid>
                <ListView x:ConnectionId='21'
                    Grid.Row="2"
                                                                         
                                                                                 
                    SelectionMode="Single" />
                <Grid Grid.Row="3" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='22' Grid.Column="0"                                                        >
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox x:ConnectionId='23'
                        Grid.Column="1"
                        Width="40"
                        Minimum="1"
                                                                                   
                                                                                 
                        SpinButtonPlacementMode="Hidden" />
                    <Button x:ConnectionId='24' Grid.Column="2"                                                    >
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock x:ConnectionId='25'
                        Grid.Column="3"
                                                                                 
                        VerticalAlignment="Center" />
                </Grid>
            </Grid>
            <Grid Grid.Column="1" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Songs" FontWeight="SemiBold" />
                <Grid Grid.Row="1" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='19'
                        Grid.Column="0"
                                                                                                                  
                        PlaceholderText="Search songs" />
                    <Button x:ConnectionId='20' Grid.Column="1"                                                 Padding="12,0">
                        <SymbolIcon Symbol="Find" />
                    </Button>
                </Grid>
                <ListView x:ConnectionId='11'
                    Grid.Row="2"
                    IsItemClickEnabled="True"
                                               
                                                                               
                                                                               
                    SelectionMode="Single"
                                                   >
                    <ListView.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:ConnectionId='17' Text="View Details"                          >
                                <MenuFlyoutItem.Icon>
                                    <SymbolIcon Symbol="Document" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </ListView.ContextFlyout>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4" Padding="8">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{Binding Artist}" Width="80" />
                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Width="180" />
                                    <TextBlock Text="{Binding Language}" Width="40" />
                                    <TextBlock Text="{Binding Genre}" Width="60" />
                                    <TextBlock Text="{Binding Comment}" Width="180" />
                                    <StackPanel Orientation="Horizontal" Spacing="4" Width="100">
                                        <TextBlock Text="Ch:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock Text="{Binding Instrumental}" />
                                        <TextBlock Text="Pri:" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="8,0,0,0" />
                                        <TextBlock Text="{Binding Priority}" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding MediaPath}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Row="3" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='12' Grid.Column="0"                                                      >
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox x:ConnectionId='13'
                        Grid.Column="1"
                        Width="40"
                        Minimum="1"
                                                                                 
                                                                               
                        SpinButtonPlacementMode="Hidden" />
                    <Button x:ConnectionId='14' Grid.Column="2"                                                  >
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock x:ConnectionId='15'
                        Grid.Column="3"
                                                                               
                        VerticalAlignment="Center" />
                    <Button x:ConnectionId='16' Grid.Column="4" Content="Add to Queue"                                                />
                </Grid>
            </Grid>
            <Grid Grid.Column="2" RowSpacing="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Queue" FontWeight="SemiBold" />
                <ListView x:ConnectionId='3'
                    x:Name="QueueListView"
                    Grid.Row="1"
                                                                       
                                                                                     
                                                                                           
                    SelectionMode="Single"
                                                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4" Padding="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock 
                                        Text="♪" 
                                        FontSize="16" 
                                        Foreground="Gold" 
                                        FontWeight="Bold"
                                        VerticalAlignment="Center"
                                        x:Name="PlayingIndicator"
                                        Visibility="Collapsed" />
                                    <TextBlock 
                                        Text="{Binding Title}" 
                                        FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock 
                                    Text="{Binding Artist}" 
                                    FontSize="12" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Row="2" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='4' Grid.Column="0"                                                      >
                        <SymbolIcon Symbol="Back" />
                    </Button>
                    <NumberBox x:ConnectionId='5'
                        Grid.Column="1"
                        Width="40"
                        Minimum="1"
                                                                                 
                                                                               
                        SpinButtonPlacementMode="Hidden" />
                    <Button x:ConnectionId='6' Grid.Column="2"                                                  >
                        <SymbolIcon Symbol="Forward" />
                    </Button>
                    <TextBlock x:ConnectionId='7'
                        Grid.Column="3"
                                                                               
                        VerticalAlignment="Center" />
                    <Button x:ConnectionId='8' Grid.Column="4" Content="Remove"                                                     />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>

